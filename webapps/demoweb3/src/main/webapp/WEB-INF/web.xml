<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Web Application Demo2</display-name>
  
  <servlet>
    <servlet-name>Startup</servlet-name>
    <servlet-class>com.example.Startup</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>RichiestaServlet</servlet-name>
    <servlet-class>com.example.RichiestaServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RichiestaServlet</servlet-name>
    <url-pattern>/richiesta</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
